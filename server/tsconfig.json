{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution":"node",
  }
}
